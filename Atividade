#include <stdio.h>

float calcular_media_ponderada(float nota1, float nota2);
char calcular_conceito(float media);

int main() {
    float nota1, nota2, media;
    char conceito;

    // Lê as notas do aluno
    printf("Digite a primeira nota: ");
    scanf("%f", &nota1);
    printf("Digite a segunda nota: ");
    scanf("%f", &nota2);

    // Calcula a média ponderada
    media = calcular_media_ponderada(nota1, nota2);

    // Calcula o conceito final
    conceito = calcular_conceito(media);

    // Imprime a média e o conceito final
    printf("Média: %.1f\n", media);
    printf("Conceito: %c\n", conceito);

    return 0;
}

float calcular_media_ponderada(float nota1, float nota2) {
    return (nota1 * 4 + nota2 * 6) / 10;
}

char calcular_conceito(float media) {
    if (media >= 9.0) {
        return 'A';
    } else if (media >= 7.0) {
        return 'B';
    } else if (media >= 5.0) {
        return 'C';
    } else {
        return 'D';
    }
}
